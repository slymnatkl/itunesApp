<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/btnToggleGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:singleSelection="true"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMovies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entity_filter_movies"

                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:backgroundTint="@drawable/background_selector"
                android:textColor="@color/text_color"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entity_filter_music"

                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:backgroundTint="@drawable/background_selector"
                android:textColor="@color/text_color"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entity_filter_apps"

                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:backgroundTint="@drawable/background_selector"
                android:textColor="@color/text_color"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBooks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entity_filter_books"

                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:backgroundTint="@drawable/background_selector"
                android:textColor="@color/text_color"
                />

        </com.google.android.material.button.MaterialButtonToggleGroup>

    </LinearLayout>

</layout>